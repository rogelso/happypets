extend layout

block content
  <!DOCTYPE html>
  <html>
      link(href='/css/style.css', rel='stylesheet')

      <body>
        <form method='POST', action='/users/register'>
          <div class="container">
            <label for="Name"><b>Nome Completo</b></label>
            <input type="text" placeholder="Nome Completo" name="name" required>

            <label for="email"><b>Email</b></label>
            <input type="text" placeholder="Email" name="email" required>

            <label for="username"><b>Nome de Usuário</b></label>
            <input type="text" placeholder="Usuário" name="username" required>

            <label for="psw"><b>Senha</b></label>
            <input type="password" placeholder="Senha" name="password" required>

            <label for="dfg"><b>Confirmar Senha</b></label>
            <input type="password" placeholder=" Senha" name="password2" required>

            <button type="submit">Registrar</button>
            <a href="/" class="cancelbtn"> Cancelar </a>
          </div>
        </form>
